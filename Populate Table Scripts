Popular Movie Table Script

import pandas as pd
import sys

def modify_csv(input_file, output_file):
    # Read the CSV file into a DataFrame
    df = pd.read_csv(input_file)
    
    # Check if the 'mlTable' column exists in the DataFrame
    if 'mlTable' in df.columns:
        # Remove the last 6 characters from each entry in the 'mlTable' column
        df['mlTable'] = df['mlTable'].apply(lambda x: x[:-6] if isinstance(x, str) else x)
    else:
        print("The 'mlTable' column does not exist in the CSV file.")
        return
    
    # Save the modified DataFrame back to a new CSV file
    df.to_csv(output_file, index=False)
    print(f"Modified CSV has been saved to {output_file}")

if __name__ == "__main__":
    if len(sys.argv) != 3:
        print("Usage: python script.py <input_csv_file> <output_csv_file>")
    else:
        input_csv_file = sys.argv[1]
        output_csv_file = sys.argv[2]
        modify_csv(input_csv_file, output_csv_file)
